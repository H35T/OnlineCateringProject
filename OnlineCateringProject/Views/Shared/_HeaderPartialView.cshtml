@{
    var userName = Context.Session.GetString("UserName");
    var userType = Context.Session.GetString("UserType");
}
<!-- .header-wrapper start -->
<div id="header-wrapper">
    <!-- #header start -->
    <header id="header">

        <!-- Main navigation and logo container -->
        <div class="header-inner">
            <!-- .container start -->
            <div class="container">
                <!-- .main-nav start -->
                <div class="main-nav">
                    <!-- .row start -->
                    <div class="row">
                        <div class="col-md-12">
                            <!-- .navbar start -->
                            <nav class="navbar navbar-default nav-left">

                                <!-- .navbar-header start -->
                                <div class="navbar-header">
                                    <!-- .logo start -->
                                    <div class="logo">
                                        <a href="index-2.html">
                                            <img src="~/img/logo.png" alt="Royal Plate Restaurant & Catering HTML Template">
                                        </a>
                                    </div><!-- logo end -->
                                </div><!-- .navbar-header end -->
                                <!-- Collect the nav links, forms, and other content for toggling -->
                                <div class="collapse navbar-collapse">
                                    <ul class="nav navbar-nav pi-nav">
                                        <li class="@(ViewContext?.RouteData?.Values?["controller"]?.ToString() == "Home" &&  ViewContext?.RouteData?.Values?["action"]?.ToString() == "Index" ? "current-menu-item" : "") dropdown">
                                            <a asp-area="" asp-action="Index" asp-controller="Home">Home</a>
                                        </li>

                                        <li class="@(ViewContext?.RouteData?.Values?["controller"]?.ToString() == "Home" &&  ViewContext?.RouteData?.Values?["action"]?.ToString() == "About" ? "current-menu-item" : "") dropdown">
                                            <a asp-area="" asp-action="About" asp-controller="Home">About</a>
               
                                        </li>

                                        <li class="@(ViewContext?.RouteData?.Values?["controller"]?.ToString() == "Home" &&  ViewContext?.RouteData?.Values?["action"]?.ToString() == "Menu" ? "current-menu-item" : "") dropdown">
                                            <a  asp-action="Menu" asp-controller="Home">Menu</a>
                            @*                <ul class="dropdown-menu">
                                                <li><a href="menu-01.html">Menu 1</a></li>
                                                <li><a href="menu-02.html">Menu 2</a></li>
                                                <li><a href="menu-details.html">Menu details example</a></li>
                                            </ul><!-- .dropdown-menu end -->*@
                                        </li>

                                   
                                        <li class="@(ViewContext?.RouteData?.Values?["controller"]?.ToString() == "Home" &&  ViewContext?.RouteData?.Values?["action"]?.ToString() == "Catering" ? "current-menu-item" : "")dropdown">
                                            <a asp-action="Catering" asp-controller="Home">Catering</a>
                                
                                        </li>
                                     
                         

                                        @if (string.IsNullOrEmpty(userName))
                                        {
                                            <li class="@(ViewContext?.RouteData?.Values?["controller"]?.ToString() == "Login" &&  (ViewContext?.RouteData?.Values?["action"]?.ToString() == "Login" || ViewContext?.RouteData?.Values?["action"]?.ToString() == "Register") ? "current-menu-item" : "") dropdown">
                                                <a href="#">Login/Register</a>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a asp-action="Login" asp-controller="Login">Login</a>
                                                    </li>
                                                    <li>
                                                        <a asp-action="Register" asp-controller="Login">Register</a>
                                                    </li>

                                                </ul><!-- .dropdown-menu end -->
                                            </li>
                 
                                        }
                                        else
                                            {
                                            <li class="dropdown">
                                                <a href="#">@userName</a>
                                                <ul class="dropdown-menu">
                                                    @if(userType == "Customer")
                                                    {
                                                        <li><a asp-action="History" asp-controller="Home">History</a></li>

                                                    }
                                                    else
                                                    {
                                                        <li><a asp-action="OrderHistory" asp-controller="Home">Order History</a></li>

                                                    }
                                                    <li><a asp-action="Edit" asp-controller="Profile">Profile</a></li>
                                                    <li><a asp-action="EditUser" asp-controller="Profile">Change password</a></li>
                                                    <li><a asp-action="Logout" asp-controller="Login">Logout</a></li>
                                                </ul><!-- .dropdown-menu end -->
                                            </li>
                                        }

                                        
                                       
                                        
                                    </ul><!-- .nav.navbar-nav.pi-nav end -->
                                    <!-- Responsive menu start -->
                                    <div id="dl-menu" class="dl-menuwrapper">
                                        <button class="dl-trigger">Open Menu</button>

                                        <ul class="dl-menu">
                                            <li>
                                                <a href="#">Home</a>
                                                <ul class="dl-submenu">
                                                    <li><a href="index-2.html">Home page</a></li>
                                                    <li><a href="elements.html">Template elements</a></li>
                                                    <li><a href="locations.html">Intro page</a></li>
                                                </ul><!-- .dl-submenu end -->
                                            </li><!-- Home li end -->

                                            <li>
                                                <a href="#">About</a>
                                                <ul class="dl-submenu">
                                                    <li><a href="about.html">About</a></li>
                                                    <li><a href="#">Submenu item 1</a></li>
                                                    <li><a href="#">Submenu item 2</a></li>
                                                    <li><a href="#">Submenu item 3</a></li>
                                                    <li><a href="#">Submenu item 4</a></li>
                                                </ul><!-- .dl-submenu end -->
                                            </li><!-- About li end -->

                                            <li>
                                                <a href="#">Menu</a>
                                                <ul class="dl-submenu">
                                                    <li><a href="menu-01.html">Menu 1</a></li>
                                                    <li><a href="menu-02.html">Menu 2</a></li>
                                                    <li><a href="menu-details.html">Menu details example</a></li>
                                                </ul><!-- .dl-submenu end -->
                                            </li><!-- Menu li end -->

                                            <li>
                                                <a href="reservations.html">Reservations</a>
                                            </li><!-- Reservations li end -->
                                            <li>
                                                <a href="#">Catering</a>
                                                <ul class="dl-submenu">
                                                    <li><a href="catering.html">Catering page</a></li>
                                                    <li><a href="catering-single-page.html">Catering single page</a></li>
                                                </ul><!-- .dl-submenu end -->
                                            </li><!-- Catering li end -->
                                            <li>
                                                <a href="gallery.html">Gallery</a>
                                            </li><!-- Gallery li end -->

                                  
                                          

                                        </ul><!-- .dl-menu end -->
                                    </div><!-- (Responsive menu) #dl-menu end -->
                                </div><!-- .navbar.navbar-collapse end -->
                            </nav><!-- .navbar end -->
                        </div><!-- .col-md-12 end -->
                    </div><!-- .row end -->
                </div><!-- .main-nav end -->
            </div><!-- .container end -->
        </div><!-- .header-inner end -->
    </header><!-- #header end -->
</div><!-- #header-wrapper end -->
<!-- .page-content start -->
<!-- .page-content start -->
<div class="page-content custom-img-background dark page-title @ViewBag.Background mb-100">
    <div class="container">
        <!-- .row start -->
        <div class="row">
            <!-- .col-md-12 start -->
            <div class="col-md-12 centered">
                <div class="custom-heading style-1 triggerAnimation animated" data-animate='fadeInUp'>
                    <h1><span>@ViewBag.Span</span></h1>
                    <h1>@ViewBag.Title</h1>
                </div><!-- .custom-heading.style-1 end -->
            </div><!-- .col-md-12 end -->
        </div><!-- .row end -->
    </div><!-- .container end -->
</div><!-- .page-content end -->