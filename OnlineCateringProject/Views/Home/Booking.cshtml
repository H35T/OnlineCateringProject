@model OnlineCateringProject.Models.BookingRequest

@{
    ViewData["Title"] = "Give us infomation";
    ViewData["Span"] = "Booking";
    ViewData["Background"] = "page-title-1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="page-content">
    <div class="container">
        <div class="row">
            <form asp-action="CreateBill" asp-controller="Caterer" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="CatererId" />

                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label">Customer ID</label>
                    <input asp-for="CustomerId" class="form-control" />
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CostPerPlate" class="control-label">Cost Per Plate</label>
                    <input asp-for="CostPerPlate" class="form-control" />
                    <span asp-validation-for="CostPerPlate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MinPeople" class="control-label">Minimum People</label>
                    <input asp-for="MinPeople" class="form-control" />
                    <span asp-validation-for="MinPeople" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MaxPeople" class="control-label">Maximum People</label>
                    <input asp-for="MaxPeople" class="form-control" />
                    <span asp-validation-for="MaxPeople" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DeliveryDate" class="control-label">Delivery Date</label>
                    <input asp-for="DeliveryDate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DeliveryAddress" class="control-label">Delivery Address</label>
                    <input asp-for="DeliveryAddress" class="form-control" />
                    <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                </div>

                <h4>Menu Orders</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Menu Item</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Actions</th> <!-- Thêm cột Actions -->
                        </tr>
                    </thead>
                    <tbody id="orderTableBody">
                        @for (int i = 0; i < Model.Orders.Count; i++)
                        {
                            <tr>
                                <td hidden>
                                    <input asp-for="Orders[i].MenuItemNo" class="form-control" readonly />
                                </td>
                                <td>
                                <input asp-for="Orders[i].Name" class="form-control" readonly />
                                </td>
                                <td>
                                    <input asp-for="Orders[i].Price" class="form-control" readonly />
                                </td>
                                <td>
                                    <input asp-for="Orders[i].Quantity" class="form-control" />
                                    <span asp-validation-for="Orders[i].Quantity" class="text-danger"></span>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-danger" onclick="removeOrderRow(this)">
                                        <i class="fas fa-trash"></i> <!-- Sử dụng Font Awesome Icon -->
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="form-group">
                    <input type="submit" value="Submit Booking" class="btn btn-primary" />
                </div>
            </form>

            <div>
                <a asp-action="Details" asp-route-id="@Model.CatererId">Back to List</a>
            </div>
        </div>
    </div>
</div>



<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- Sử dụng Font Awesome -->


<script>
    function removeOrderRow(button) {
        // Lấy hàng chứa nút bấm đã được click
        var row = button.closest('tr');
        // Xóa hàng đó khỏi bảng
        row.remove();
    }
</script>

